<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <ImageView
      android:id="@+id/recipe_list_thumbnail"
      android:layout_width="117dp"
      android:layout_height="117dp"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:contentDescription="thumbnail"
      android:scaleType="centerInside"
      tools:src="@mipmap/ic_launcher" />

  <RelativeLayout
      android:id="@+id/recipe_list_text_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="209dp">

  </RelativeLayout>

  <TextView
      android:id="@+id/recipe_list_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/recipe_list_subtitle"
      android:layout_alignBottom="@+id/recipe_list_subtitle"
      android:layout_toStartOf="@+id/recipe_list_thumbnail"
      android:textSize="@dimen/text_big"
      tools:text="Title" />

  <TextView
      android:id="@+id/recipe_list_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:ellipsize="end"
      android:maxLines="3"
      android:textSize="@dimen/text_big"
      tools:text="Subtitle" />
</RelativeLayout>
