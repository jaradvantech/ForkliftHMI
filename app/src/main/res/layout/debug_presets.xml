<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/presets_button_placeorder"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Place order"
        app:layout_constraintStart_toStartOf="@+id/presets_editText_when"
        app:layout_constraintTop_toBottomOf="@+id/presets_editText_when" />

    <Button
        android:id="@+id/presets_button_forcepallet"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Force pallet"
        app:layout_constraintStart_toStartOf="@+id/presets_editText_forcetopallet"
        app:layout_constraintTop_toBottomOf="@+id/presets_editText_forcetopallet" />

    <EditText
        android:id="@+id/presets_editText_when"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="When"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/presets_editText_where"
        app:layout_constraintTop_toBottomOf="@+id/presets_editText_where" />

    <EditText
        android:id="@+id/presets_editText_what"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="What"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/advanced_switch_enable16"
        app:layout_constraintTop_toTopOf="@+id/advanced_switch_enable16" />

    <EditText
        android:id="@+id/presets_editText_where"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Where"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/presets_editText_what"
        app:layout_constraintTop_toBottomOf="@+id/presets_editText_what" />

    <Switch
        android:id="@+id/advanced_switch_forceinput"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="FORCE INPUT"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/advanced_switch_forceoutput"
        app:layout_constraintTop_toBottomOf="@+id/advanced_switch_forceoutput" />

    <Switch
        android:id="@+id/advanced_switch_enable16"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:enabled="true"
        android:text="WheterOrNotPutTheTileTo16 enable"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/advanced_switch_forceoutput"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="FORCE OUTPUT"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/advanced_switch_enable16"
        app:layout_constraintTop_toBottomOf="@+id/advanced_switch_enable16" />

    <Button
        android:id="@+id/presets_button_send"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="SEND"
        app:layout_constraintEnd_toEndOf="@+id/advanced_switch_forceinput"
        app:layout_constraintTop_toBottomOf="@+id/advanced_switch_forceinput" />

    <EditText
        android:id="@+id/presets_editText_forcetopallet"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="Pallet..."
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/presets_editText_what"
        app:layout_constraintTop_toTopOf="@+id/presets_editText_what" />
</android.support.constraint.ConstraintLayout>
