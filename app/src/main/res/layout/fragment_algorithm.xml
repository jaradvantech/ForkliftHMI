<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.Display4.Algorithm">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/algorithm_listView_colours"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="268dp"
            android:alwaysDrawnWithCache="false"
            android:choiceMode="singleChoice"
            android:clickable="false"
            android:entries="@array/Colours"
            android:listSelector="@color/colorPrimaryPale"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:scrollingCache="false"
            app:layout_constraintStart_toEndOf="@+id/algorithm_textView_type"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/algorithm_listView_grades"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginStart="24dp"
            android:choiceMode="singleChoice"
            android:entries="@array/Grades"
            android:listSelector="@color/colorPrimaryPale"
            app:layout_constraintStart_toEndOf="@+id/algorithm_listView_colours"
            app:layout_constraintTop_toTopOf="@+id/algorithm_listView_colours" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm5"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/manual_manipulator"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm4"
            app:layout_constraintTop_toTopOf="@+id/algorithm_imageView_arm4" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginEnd="140dp"
            android:layout_marginStart="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/manual_manipulator"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/manual_imageView_line"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm1"
            app:layout_constraintTop_toTopOf="@+id/algorithm_imageView_arm1" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/manual_manipulator"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm3"
            app:layout_constraintTop_toTopOf="@+id/algorithm_imageView_arm3" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/manual_manipulator"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm2"
            app:layout_constraintTop_toTopOf="@+id/algorithm_imageView_arm2" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="52dp"
            android:scaleType="fitXY"
            android:src="@mipmap/manual_manipulator"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm3mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/in"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/algorithm_imageView_arm3"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm3" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm5mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/in"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/algorithm_imageView_arm5"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm5" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm4mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/in"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/algorithm_imageView_arm4"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm4" />

        <TextView
            android:id="@+id/algorithm_demobrick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal|center"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/algorithm_button_save"
            app:layout_constraintStart_toStartOf="@+id/algorithm_button_save"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_textView_type" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm2mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/in"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/algorithm_imageView_arm2"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm2" />

        <ImageView
            android:id="@+id/algorithm_imageView_arm1mode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/in"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/algorithm_imageView_arm1"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm1" />

        <TextView
            android:id="@+id/algorithm_textView_manipulator1"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="INPUT"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm1mode"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm1"
            tools:text="INPUT" />

        <TextView
            android:id="@+id/algorithm_textView_manipulator2"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="INPUT"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm2mode"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm2"
            tools:text="INPUT" />

        <TextView
            android:id="@+id/algorithm_textView_manipulator3"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="INPUT"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm3mode"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm3"
            tools:text="INPUT" />

        <TextView
            android:id="@+id/algorithm_textView_manipulator4"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="INPUT"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm4mode"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm4"
            tools:text="INPUT" />

        <TextView
            android:id="@+id/algorithm_textView_manipulator5"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="INPUT"
            app:layout_constraintStart_toEndOf="@+id/algorithm_imageView_arm5mode"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_imageView_arm5"
            tools:text="INPUT" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="234dp"
            android:layout_height="31dp"
            android:layout_marginTop="36dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/seekBar2"
            app:layout_constraintTop_toBottomOf="@+id/seekBar2" />

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="234dp"
            android:layout_height="31dp"
            android:layout_marginTop="36dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="234dp"
            android:layout_height="31dp"
            android:layout_marginStart="40dp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/algorithm_listView_grades"
            app:layout_constraintTop_toTopOf="@+id/algorithm_listView_grades" />

        <Button
            android:id="@+id/algorithm_button_save"
            android:layout_width="272dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/Save"
            app:layout_constraintEnd_toEndOf="@+id/algorithm_textView_type"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/algorithm_textView_type"
            app:layout_constraintTop_toBottomOf="@+id/algorithm_demobrick" />

        <TextView
            android:id="@+id/algorithm_textView_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Grade"
            app:layout_constraintBottom_toTopOf="@+id/algorithm_listView_grades"
            app:layout_constraintStart_toStartOf="@+id/algorithm_listView_grades" />

        <TextView
            android:id="@+id/algorithm_textView_type"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="248dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/TypeToPackage"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/algorithm_textView_color"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="@string/Color"
            app:layout_constraintBottom_toTopOf="@+id/algorithm_listView_colours"
            app:layout_constraintStart_toStartOf="@+id/algorithm_listView_colours" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/SimilarityCoef"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintStart_toStartOf="@+id/seekBar" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/MatchTopCoef"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/seekBar2"
            app:layout_constraintStart_toStartOf="@+id/seekBar2" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/PositionCoef"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/seekBar3"
            app:layout_constraintStart_toStartOf="@+id/seekBar3" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
