<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.PickingStation.AdvancedSettings">

    <EditText
        android:id="@+id/advanced_edittext_arm3"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/advanced_edittext_arm2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/advanced_textview_arm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Position of arm #4:"
        app:layout_constraintBottom_toTopOf="@+id/advanced_edittext_arm4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/advanced_edittext_arm4" />

    <TextView
        android:id="@+id/advanced_textview_arm5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Position of arm #5:"
        app:layout_constraintBottom_toTopOf="@+id/advanced_edittext_arm5"
        app:layout_constraintStart_toStartOf="@+id/advanced_edittext_arm5" />

    <TextView
        android:id="@+id/advanced_textview_arm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Position of arm #3:"
        app:layout_constraintBottom_toTopOf="@+id/advanced_edittext_arm3"
        app:layout_constraintStart_toStartOf="@+id/advanced_edittext_arm3" />

    <Button
        android:id="@+id/advanced_button_arm1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="@+id/advanced_edittext_arm1"
        app:layout_constraintTop_toBottomOf="@+id/advanced_edittext_arm1" />

    <EditText
        android:id="@+id/advanced_edittext_arm1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/advanced_edittext_arm2"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/advanced_edittext_arm1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/advanced_edittext_arm4"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/advanced_edittext_arm3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/advanced_edittext_arm5"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/advanced_edittext_arm4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/advanced_textview_arm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Position of arm #1:"
        app:layout_constraintBottom_toTopOf="@+id/advanced_edittext_arm1"
        app:layout_constraintStart_toStartOf="@+id/advanced_edittext_arm1" />

    <TextView
        android:id="@+id/advanced_textview_arm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Position of arm #2:"
        app:layout_constraintBottom_toTopOf="@+id/advanced_edittext_arm2"
        app:layout_constraintStart_toStartOf="@+id/advanced_edittext_arm2" />
</android.support.constraint.ConstraintLayout>
